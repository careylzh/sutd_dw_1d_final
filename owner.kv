WindowManager:
    Page1:
    Page2:


<Page1>:
    name: "main"
    container: container

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation:'horizontal'
            size_hint: 0.85, 0.3
            pos_hint: {'x': 0.05, 'y': 0.5}
            Button:
                text: "Quit"
                size_hint: 0.1, 0.4
                pos_hint: {'x': 0.8, 'y': 0.5}
                on_release:
                    app.get_running_app().stop()

            Label:
                text: "Welcome! Orders in queue:"
                font_size: 30
                size_hint: 1, 0.2
                pos_hint: {'x': 0, 'y': 0.5}


        BoxLayout:
            orientation: 'horizontal'
            padding: 10
            spacing: 10
            Button:
                text: 'Refresh'
                size_hint: 0.1, 0.2
                pos_hint: {'x': 0.25, 'y': 0.45}
                on_release:
                    root.add_rows()
            Button:
                text: "View sales"
                size_hint: 0.1, 0.2
                pos_hint: {'x': 0.25, 'y': 0.45}
                on_release:
                    root.change_screen()
        FloatLayout:
            size_hint: 1, 1
            pos_hint: {'x': 1, 'y': 0.5}
            Label:
                text: "ID"
                pos_hint: {'x': -0.9, 'y': 1.3}
                size_hint: 0.1, 0.1

            Label:
                text: "Items"
                size_hint: 0.1, 0.1
                pos_hint: {'x': -0.55, 'y': 1.3}
            Label:
                size_hint: 0.1,0.1
                text: "Verify/Complete"
                pos_hint: {'x': -0.2, 'y': 1.3}
            GridLayout:
                id: container
                cols: 3
                size_hint: 1,1
                pos_hint: {'y': 0.2}


<Page2>:
    name: "second"
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30

            Button:
                text: "go back"
                on_release:
                    app.root.current = "main"
            Button:
                text: "display graph"
                on_release:
                    root.display_graph()
        BoxLayout:
            id: bargraph

            









